---
import type { ContextSlice } from "src(old)/types/context";
import { cn } from "src(old)/utils/cn";
import { getGlobalContext } from "src(old)/utils/get-global-context";

interface Props {
  bodyClass?: string;
  lang?: string;
}

const { bodyClass } = Astro.props;

const lang =
  Astro.props.lang ??
  getGlobalContext<ContextSlice<"locale">>(Astro).locale.code;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
  </head>
  <body class={cn("font-body", bodyClass)}>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --black: 0 0% 0%;
    --white: 0 0% 100%;
  }

  :root:not(.dark) {
    color-scheme: light;
  }

  :root.dark {
    color-scheme: dark;
  }
</style>
