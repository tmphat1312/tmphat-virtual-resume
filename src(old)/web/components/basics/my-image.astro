---
import type { CollectionEntry } from "astro:content";

import Img from "@/components/img.astro";
import { cn } from "src(old)/utils/cn";

interface Props {
  basics: CollectionEntry<"basics">["data"];
  size: number;
  class?: string;
}

const { basics, class: className, size } = Astro.props;
---

{
  basics.image && (
    <Img
      loading="eager"
      class={cn("h-fit rounded-xl", className)}
      src={basics.image}
      alt={basics.name}
      width={size}
      height={size}
    />
  )
}
