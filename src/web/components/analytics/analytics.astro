---
import {
  PUBLIC_POSTHOG_API_HOST,
  PUBLIC_POSTHOG_API_KEY,
  PUBLIC_UMAMI_WEBSITE_ID,
} from "astro:env/client";

import Posthog from "./posthog.astro";
import Umami from "./umami.astro";
---

{PUBLIC_UMAMI_WEBSITE_ID && <Umami websiteId={PUBLIC_UMAMI_WEBSITE_ID} />}
{
  PUBLIC_POSTHOG_API_HOST && PUBLIC_POSTHOG_API_KEY && (
    <Posthog
      apiHost={PUBLIC_POSTHOG_API_HOST}
      apiKey={PUBLIC_POSTHOG_API_KEY}
    />
  )
}
