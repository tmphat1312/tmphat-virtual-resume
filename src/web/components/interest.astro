---
import { Icon } from "@/components/icon";
import type { AsyncEntry } from "@/types/entries";
import type { ImageProps } from "@/types/image";

interface Props {
  entry: AsyncEntry<"interests">;
  loading?: ImageProps["loading"];
}

const { entry, loading } = Astro.props;
const { data: interest } = await entry;
---

<div
  class="flex flex-wrap gap-6 rounded-lg border-2 border-dashed border-color-border px-3 py-2"
>
  <div class="flex items-center gap-2">
    {
      interest.icon && (
        <Icon
          name={interest.icon}
          class="size-5 text-color-icon-dark"
          {loading}
        />
      )
    }
    <div class="text-sm font-medium text-color-text-primary sm:text-base">
      {interest.name}
    </div>
  </div>
</div>
