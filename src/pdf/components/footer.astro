---
import type { HTMLAttributes } from "astro/types";

import { cn } from "@/utils/cn";

interface Props extends Omit<HTMLAttributes<"footer">, "id"> {}

const { class: className, ...props } = Astro.props;
---

<footer
  class={cn(
    "mx-auto flex justify-center rounded border border-color-border bg-color-bg-light px-2 py-1 text-justify font-body text-[11px] text-color-text-secondary",
    className,
  )}
  {...props}>
  <slot />
</footer>

<style>
  footer {
    /* In PDF, when generating footer with full width, side borders are cutted. */
    width: calc(100% - 2px);
  }
</style>
