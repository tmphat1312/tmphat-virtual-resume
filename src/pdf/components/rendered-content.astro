---
import type { Render } from "astro:content";

import { cn } from "@/utils/cn";

interface Props {
  class?: string;
  render: () => Render[".mdx"] | Render[".md"];
}

const { render, class: className } = Astro.props;

const { Content } = await render();
---

<div class={cn("prose prose-sm max-w-none text-justify", className)}>
  <Content />
</div>

<style>
  .prose {
    line-height: 1.625;

    p {
      margin: 0;

      & + p {
        margin-top: 0.5em;
      }
    }

    ul,
    ol {
      margin-top: 0.5em;
      padding-inline-start: 1.25rem;
    }

    li {
      margin: 0;
      padding-inline-start: 0px;
      line-height: 1.5;

      & + li {
        margin-top: 0.5em;
      }
    }
  }
</style>
