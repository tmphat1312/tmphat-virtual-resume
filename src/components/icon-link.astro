---
import { Icon } from "astro-icon/components";
import { firstCapitalize } from "../utils/first-cap";

type Props = {
  name: string;
  title: string;
  href: string;
};

const { name, title, href } = Astro.props;
---

<a
  {href}
  data-tooltip={firstCapitalize(title)}
  class="text-xl bg-gray-100 dark:bg-gray-700 p-1.5 inline-flex rounded text-gray-700 dark:text-gray-100 hover:opacity-80 hover:shadow-sm">
  <Icon {name} />
</a>
