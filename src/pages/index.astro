        {
          title: "Learning Platforms I use",
          image: "person",
          entries: ["learning-platforms/frontend-masters"],
        },
        {
          title: "People I learn from",
          image: "person",
          entries: [
            "people/dan-abramov",
            "people/theo",
            "people/dominik",
            "people/lee-robinson",
          ],
        },
      ],
    },
    {
      collection: "interests",
      title: "Interests",
      entries: [
        "reading",
        "running",
        "singing-alone",
        "cleaning",
        "organizing",
      ],
    },
  ],
};
---

<MainTemplate {...props}>
  <Head slot="head" />
</MainTemplate>
